<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:layout_weight="0.57"
        app:cardBackgroundColor="#cac3cc">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ebe7e7"
            android:padding="8sp">

            <TextView
                android:id="@+id/subject"
                android:layout_width="200sp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:hint="Subject Name"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:textAlignment="viewStart"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/present"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="11sp"
                android:layout_toEndOf="@+id/subject"
                android:hint="0"
                android:paddingLeft="15sp"
                android:paddingTop="10sp"
                android:textAlignment="viewStart"
                android:textColor="#0f6703"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/absent"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_toEndOf="@+id/present"
                android:hint="0"
                android:paddingLeft="15sp"
                android:paddingTop="10sp"
                android:textAlignment="viewStart"
                android:textColor="@color/selected_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/percent"
                android:layout_width="wrap_content"
                android:layout_height="40sp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10sp"
                android:layout_toEndOf="@+id/absent"
                android:layout_weight="0.70"
                android:paddingLeft="15sp"
                android:paddingTop="10sp"
                android:text="0"
                android:textAlignment="viewStart"
                android:textColor="@color/selected_color2"
                android:textSize="14sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>